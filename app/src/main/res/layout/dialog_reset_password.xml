<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_edittext_general"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bu_close_reset_dialog"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        app:srcCompat="@drawable/ic_clear_text"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"/>

    <EditText
        android:id="@+id/et_email_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/background_edittext_general"
        android:ems="10"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:padding="@dimen/_12sdp" />


    <TextView
        android:id="@+id/tv_hint_failure_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:gravity="center"
        android:textColor="#E91E1E"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/bu_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_20sdp"
        app:cardBackgroundColor="#4CAF50"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_25sdp"
        app:cardElevation="@null">

        <TextView
            android:id="@+id/tv_bu_LogIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="Reset"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_15ssp" />
    </androidx.cardview.widget.CardView>


</LinearLayout>